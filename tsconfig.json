{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "allowJs": true
  },
  "include": ["src/*.ts", "src/*.d.ts", "src/renderer"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
